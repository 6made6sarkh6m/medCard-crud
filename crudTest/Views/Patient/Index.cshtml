@model IEnumerable<crudTest.Models.Patients>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using(Html.BeginForm("Index","Patient", FormMethod.Get))
{
    @Html.TextBox("search",null, new {@class = "form-control" })<input type="submit" value="Search" class="btn btn-light"/>
}

<p>
    @Html.ActionLink("Add a patient", "Create") 
</p>
<table class="table">
    <h1>List of patients</h1>
    <tr>
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Father's name
        </th>
        <th>
            ID
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td style="color:red">
                Not found
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.p_fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.p_lName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.p_faName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.p_idcard)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning"}) 
                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }


</table>
